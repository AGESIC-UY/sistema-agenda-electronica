<!-- $Id: postgres-sae-ds.xml,                                          $ -->
<!-- ==================================================================== -->
<!--  Datasource config for Postgres                                      -->
<!-- ==================================================================== -->


<datasources>
  <xa-datasource>
    <jndi-name>postgres-sae-ds</jndi-name>
     <xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
     <xa-datasource-property name="ServerName">localhost</xa-datasource-property>
     <xa-datasource-property name="PortNumber">5432</xa-datasource-property>
     <xa-datasource-property name="DatabaseName">sae</xa-datasource-property>
     <xa-datasource-property name="User">postgres</xa-datasource-property>
     <xa-datasource-property name="Password">postgres</xa-datasource-property>
     <track-connection-by-tx/>
    <metadata>
       <type-mapping>PostgreSQL 8.1</type-mapping>
    </metadata>
  </xa-datasource>  
</datasources>
